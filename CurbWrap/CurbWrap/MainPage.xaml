             xmlns:img="clr-namespace:CurbWrap.MarkupExtensions;assembly=CurbWrap"
             x:Class="CurbWrap.MainPage" Style="{StaticResource appPage}">

    <ContentPage.Resources>
        <ResourceDictionary>
        </ResourceDictionary>
    </ContentPage.Resources>
    <Grid>
